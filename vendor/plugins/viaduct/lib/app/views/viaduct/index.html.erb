<% if @models.empty? %>
    <p>No <%= @model_class.to_s.pluralize.downcase %> found. <%= link_to "Create new #{@model_class.to_s.downcase}", :action => "new" %>.</p>
<% else %>
    <% form_tag url_for(:action => "bulk_action") do -%>
        <table>
          <thead>
          <tr>
            <th></th>
            <% for field in @list_display %>
                <th><%= h field %></th>
            <% end %>
          </tr>
          </thead>
          <tbody>
          <% @models.each_with_index do |model, index| %>
              <tr>
                <td id="<%= dom_id(model) %>"><%= check_box_tag("selected_models[]", model.id, false, {:id => "record_#{index}"}) %></td>
                <% for field in @list_display %>
                    <td><%= h model.send(field) %></td>
                <% end %>
                <td><%= link_to "Edit", :action => "edit", :id => model %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
        <% unless @actions.empty? -%>
            <p> Action: <%= select("selected", "action", @actions, {:include_blank => "----------"}) %> <%= submit_tag "Go" %></p>
        <% end %>
    <% end %>
    <p><%= link_to "New #{@model_class}", :action => "new" %></p>
<% end %>